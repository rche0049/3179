{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 300,
  "title": "Heatmap of Average FIDE Ratings by Age",
  "data": {
    "url": "https://raw.githubusercontent.com/rche0049/3179/main/Complete_Players_Database.csv",
    "format": {
      "type": "csv"
    }
  },
  "mark": {"type": "rect", "tooltip": true},
  "encoding": {
    "x": {
      "field": "Age",
      "bin": true,
      "title": "Age"
    },
    "y": {
      "field": "FIDE",
      "bin": true,
      "title": "Average FIDE Rating"
    },
    "color": {
      "aggregate": "count",
      "type": "quantitative",
      "title": "Count",
      "scale": {
        "scheme": "goldgreen" 
      }
    }
  }
}
