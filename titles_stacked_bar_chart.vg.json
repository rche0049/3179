{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "title": "Stacked Bar Chart of Titles by Country",
  "data": {
    "url": "https://raw.githubusercontent.com/rche0049/3179/main/International_Chess_Stats_Complete.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "GMs", "order": "descending"}]
    },
    {
      "filter": {"field": "rank", "lte": 10}
    }
  ],
  "mark": {
    "type": "bar",
    "tooltip": true
  },
  "encoding": {
    "x": {
      "field": "Country",
      "type": "nominal",
      "title": "Country"
    },
    "y": {
      "field": "GMs",
      "type": "quantitative",
      "stack": "normalize",
      "title": "GMs"
    },
    "color": {
      "field": "Title",
      "type": "nominal",
      "title": "Title"
    }
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "FMs",
          "type": "quantitative",
          "stack": "normalize",
          "title": "FMs"
        }
      }
    },
    {
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "IMs",
          "type": "quantitative",
          "stack": "normalize",
          "title": "IMs"
        }
      }
    }
  ]
}
